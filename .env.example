# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Canva Configuration
CANVA_API_KEY=your_canva_api_key_here
CANVA_CLIENT_ID=your_canva_client_id_here
CANVA_CLIENT_SECRET=your_canva_client_secret_here
CANVA_REDIRECT_URI=http://localhost:8000/callback

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/kids_book_generator
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_SECRET_KEY=your_secret_key_here
DEBUG=True
ENVIRONMENT=development

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=kids-book-generator
AWS_REGION=us-east-1

#Google Cloud Storage Configuration (optional)
GCS_PROJECT_ID=your_gcs_project_id
GCS_BUCKET_NAME=kids-book-generator
GCS_SERVICE_ACCOUNT_KEY=your_gcs_service_account_key
GCS_REGION=us-central1

# API Rate Limits
OPENAI_RATE_LIMIT=60
CANVA_RATE_LIMIT=60

# File Storage
STORAGE_TYPE=local  # Options: local, s3, gcs
LOCAL_STORAGE_PATH=./output

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
